FROM node:18-alpine

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем package.json и package-lock.json
COPY frontend/package*.json ./

# Устанавливаем зависимости
RUN npm ci

# Устанавливаем serve для статического экспорта
RUN npm install -g serve

# Копируем исходный код
COPY frontend/ ./

# Собираем приложение
RUN npm run build

# Открываем порт
EXPOSE 3000

# Команда запуска для статического экспорта
CMD ["serve", "-s", "out", "-l", "3000"]
