# Production Environment Variables
# Скопируйте этот файл в .env.production и измените значения

# База данных
POSTGRES_PASSWORD=agb_passports_2024_secure

# Секретный ключ для JWT токенов (сгенерируйте новый!)
SECRET_KEY=your-super-secret-key-change-in-production

# URL API (замените на ваш домен)
API_URL=http://localhost:8000

# SSL Configuration (раскомментировать для HTTPS)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Дополнительные настройки
DEBUG=False
LOG_LEVEL=INFO

# Настройки безопасности
CORS_ORIGINS=*
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
